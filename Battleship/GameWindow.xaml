<Window x:Class="Battleship.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship"
        mc:Ignorable="d"
        Title="GameWindow" Height="1080" Width="1920"
        WindowState="Maximized"
        ResizeMode="NoResize">
    <Grid Name="MyGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="2" FontSize="80" FontFamily="Candara Light">BATTLESHIP</Label>
        <Grid VerticalAlignment="Center" Width="300" HorizontalAlignment="Center" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label HorizontalAlignment="Center" Name="LblTimer" FontSize="80" FontFamily="Candara Light" >00:00</Label>
            <Label HorizontalAlignment="Center" Grid.Row="1" Name="LblShip" FontSize="60" FontFamily="Candara Light" >SHIPS: X</Label>
        </Grid>
    </Grid>
</Window>
